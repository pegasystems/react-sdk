{
  "name": "react-sdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:dev": "run-p -l lint build-dev-only",
    "build:dev:ci": "npm run clean && npm install && npm run build:dev",
    "build:prod": "run-p -l lint build-prod-only",
    "build:prod:ci": "npm run clean && npm install && npm run build:prod",
    "start-dev": "npm run govuk-frontend-init && webpack serve",
    "start-dev-https": "webpack serve --https",
    "start-prod": "http-server ./dist --port 3502 --gzip --brotli --cors --proxy http://localhost:3502?",
    "start-prod-https": "http-server ./dist --port 3502 --gzip --brotli --cors --ssl --cert private.pem --key private.key --proxy https://localhost:3502?",
    "govuk-frontend-init": "shx cp ./node_modules/govuk-frontend/govuk/assets/images/* ./assets/images && shx cp ./node_modules/govuk-frontend/govuk/assets/fonts/* ./assets/fonts",
    "clean": "node rimraf-standalone.js ./dist/** ./node_modules",
    "lint": "npx eslint \"src/**\"",
    "lint-errors-only": "npx eslint \"src/**\" --quiet",
    "_comment_2": "Commands related to the Component Config server that's needed at design time/authoring",
    "_comment_3": "copy-configs  and component-config-server are only used when running against Infinity 8.7.* or newer",
    "copy-configs": "node ./copy-configs",
    "start-component-config-server": "http-server ./distAuthoring --port 4502 --cors -d false",
    "start-component-config-server-https": "http-server ./distAuthoring --port 4502 --cors -d false --ssl --cert private.pem --key private.key",
    "_comment_1": "Commands below should only be called by commands above",
    "build-dev-only": "npm run govuk-frontend-init && webpack --mode=development && npm run copy-index && npm run copy-configs",
    "build-prod-only": "npm run govuk-frontend-init && webpack --mode=production && npm run copy-index && npm run copy-configs",
    "copy-index": "shx cp dist/index.html dist/simpleportal.html && shx cp dist/index.html dist/portal.html && shx cp dist/index.html dist/fullportal.html && shx cp dist/index.html dist/embedded.html",
    "test": "node playwright-message.js && playwright test --project=chromium MediaCo/portal MediaCo/embedded",
    "test:headed": "playwright test --headed --project=chromium MediaCo/portal MediaCo/embedded",
    "test-report": "playwright show-report",
    "test-jest": "jest --watchAll",
    "test-jest-coverage": "jest --watchAll --coverage"
  },
  "dependencies": {
    "@date-io/dayjs": "^1.3.13",
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@material-ui/pickers": "^3.3.10",
    "@pega/constellationjs": "SDK-8.8.2",
    "@unicef/material-ui-currency-textfield": "^0.8.6",
    "dayjs": "^1.10.6",
    "dompurify": "^3.0.1",
    "downloadjs": "^1.4.7",
    "fast-deep-equal": "^3.1.3",
    "govuk-frontend": "^4.5.0",
    "html-react-parser": "^3.0.15",
    "lodash.isequal": "^4.5.0",
    "material-ui-phone-number": "^2.2.6",
    "react": "^18.1.0",
    "react-datepicker": "^4.8.0",
    "react-dom": "^18.1.0",
    "react-redux": "^7.2.4",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-test-renderer": "^18.2.0",
    "throttle-debounce": "^5.0.0",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@kooneko/livereload-webpack-plugin": "^1.2.0",
    "@loadable/component": "^5.13.1",
    "@pega/configs": "^0.3.4",
    "@pega/eslint-config": "^0.3.2",
    "@pega/prettier-config": "^0.3.2",
    "@playwright/test": "^1.28.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.2",
    "@types/lodash.isequal": "^4.5.5",
    "@types/react": "^16.13.1",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^8.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^8.4.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sonarjs": "^0.11.0",
    "fast-glob": "^3.2.7",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^13.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prop-types": "^15.7.2",
    "rimraf-standalone": "^2.6.1-7",
    "sass": "^1.58.3",
    "sass-loader": "^10.1.1",
    "shx": "^0.3.3",
    "style-loader": "^2.0.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.13.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^4.7.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
